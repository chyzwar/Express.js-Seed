extends ../layout

block content
  section#login
    .container
      .row
        .col-xs-12
          .form-wrap
            h1 Register
            form#login-form(role='form', action='/auth/signup', method='post', autocomplete='off')
              .form-group
                label.sr-only(for='email') Email
                input#email.form-control(type='email', name='email', placeholder='someone@example.com')
              .form-group
                label.sr-only(for='password') Password
                input.key-pass.form-control(type='password', name='password', placeholder='Password')
              .form-group
                label.sr-only(for='password') Password Confirmation
                input.key-pass.form-control(type='password', name='password_confirmation', placeholder='Password Confirmation')
              .checkbox
                span.character-checkbox(onclick='showPassword()')
                span.label Show password
              input#btn-login.btn.btn-custom.btn-lg.btn-block(type='submit', value='Register')
              #message
              if message
                h3.text-center.error-message #{message}
           


  footer#footer
    .container
      .row
        .col-xs-12

block scripts